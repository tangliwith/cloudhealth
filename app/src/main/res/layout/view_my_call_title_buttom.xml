<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_my_call_title_btn_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_my_call_title_btn_null_bg"
            android:gravity="center"
            android:text="图文"
            android:textColor="@color/app_title_top"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_my_call_title_btn2_ed_bg"
            android:gravity="center"
            android:text="语音"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_btn_3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/shape_my_call_title_btn3_ed_bg"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>