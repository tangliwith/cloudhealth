<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent1"
    android:gravity="center|bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:text="选择付款方式"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_width"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line" />

            <RelativeLayout
                android:id="@+id/rel_balance"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_pay_type_1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:layout_toRightOf="@id/img_1"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff000000"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_more"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <RelativeLayout
                android:id="@+id/rel_wechat"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_pay_type_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:layout_toRightOf="@id/img_2"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff000000"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_more"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/view_line" />

            <RelativeLayout
                android:id="@+id/rel_ali"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_pay_type_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:layout_toRightOf="@id/img_3"
                    android:layout_marginLeft="12dp"
                    android:textColor="#ff000000"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_more"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>