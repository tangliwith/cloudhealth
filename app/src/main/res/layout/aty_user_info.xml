<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rel_choose_head"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                    <com.ecuca.cloudhealth.View.CircleImageView
                        android:id="@+id/img_head"
                        android:layout_width="59dp"
                        android:layout_height="59dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/pic" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:layout_toRightOf="@id/img_head"
                        android:text="头像"
                        android:textColor="@color/text_gray666"
                        android:textSize="@dimen/text_size_15" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_more" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="昵称:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/et_nick_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27.5dp"
                            android:background="@null"
                            android:hint="请输入昵称"
                            android:text=""
                            android:textSize="@dimen/text_size_15"
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/text_hint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="性别:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:orientation="horizontal"
                            android:paddingLeft="15dp"
                            android:gravity="center_vertical"
                            android:paddingRight="15dp">


                            <RadioButton
                                android:id="@+id/rb_sex_man"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:paddingLeft="5dp"
                                android:text="男"
                                android:textColor="@color/text_gray333"
                                android:textSize="@dimen/text_size_15" />

                            <RadioButton
                                android:id="@+id/rb_sex_woman"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:paddingLeft="5dp"
                                android:text="女"
                                android:textColor="@color/text_gray333"
                                android:textSize="@dimen/text_size_15" />

                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/rel_choose_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="出生年月:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10.5dp"
                                android:text="请选择"
                                android:textColor="@color/text_gray666"
                                android:textSize="15dp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/icon_more" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/rel_choose_address"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView

                            android:id="@+id/tv_address_111"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="所在区域:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_address_111"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15.5dp"
                                android:text="请选择地区"
                                android:textColor="@color/text_gray666"
                                android:textSize="15dp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/icon_more" />
                        </RelativeLayout>
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center|left"
                            android:text="详细地址:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />


                        <EditText
                            android:id="@+id/et_address_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"

                            android:hint="请输入详细地址，不少于5个字"
                            android:minLines="2"
                            android:textColor="@color/text_gray666"
                            android:textColorHint="@color/text_hint"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="病史:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/et_medical_record"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27.5dp"
                            android:background="@null"
                            android:hint="请输入病史"
                            android:textSize="@dimen/text_size_15"
                            android:text=""
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/text_hint" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="过敏史:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <EditText
                            android:id="@+id/et_allergy_record"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27.5dp"
                            android:background="@null"
                            android:hint="请输入过敏药物"
                            android:textSize="@dimen/text_size_15"
                            android:text=""
                            android:textColor="@color/text_black"
                            android:textColorHint="@color/text_hint" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <RelativeLayout

                        android:id="@+id/rel_choose_test_1"
                        android:layout_width="match_parent"
                        android:layout_height="119dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="化验单:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_test_1"
                                android:layout_width="100dp"
                                android:layout_height="74dp"
                                android:layout_marginRight="10.5dp"
                                android:src="@mipmap/icon_user_info_upload_img_1" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/icon_more" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />

                    <RelativeLayout
                        android:id="@+id/rel_choose_test_2"
                        android:layout_width="match_parent"
                        android:layout_height="119dp"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="医疗影像:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_test_2"
                                android:layout_width="100dp"
                                android:layout_height="74dp"
                                android:layout_marginRight="10.5dp"
                                android:src="@mipmap/icon_user_info_upload_img_2" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/icon_more" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/view_line" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center|left"
                            android:text="备注信息:"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/text_size_15" />


                        <EditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="请输入备注信息（选填）"
                            android:minLines="2"
                            android:textColor="@color/text_gray666"
                            android:textColorHint="@color/text_hint"
                            android:textSize="15sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/app_bg" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_title_top"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>
</LinearLayout>